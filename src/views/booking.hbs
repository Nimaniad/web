<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card ">
                <div class="card-body">
                    <form action="/booking" method="POST">
                        <p class="text-center">Select a day for booking</p>
                        <div class="form-group">
                            <input type="date" name="bk_date" class="form-control">
                        </div>

                        <div class="form-group text-center">
                            <label for="bk_time">Select the time of attendance</label>
                            <select class="form-control" name="bk_time" id="bk_time">
                                <option>11:00</option>
                                <option>17:00</option>
                                <option>18:00</option>
                                <option>19:00</option>
                                <option>20:00</option>
                            </select>
                        </div>
                        <div class="form-group text-center">
                            <p>Phone contact</p>
                            <input type="number" name="phone" class="form-control" placeholder="Phone">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Save</button>
                        </div>
                        <p class="text-center">Do you already have a reservation? <a href="/profile">Check here</a></p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>