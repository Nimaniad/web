<div class="container p-4 overflow-auto">
    <div class="row">
        <div class="col-md-12 conl-lg-12 col-sm-12 mx-auto columna">
            <div class="card text-center">
                <div class="card-body">
                    <h3>Profile</h3>
                    <h3>{{user.fullname}}</h3>
                    <ul class="list-group list-group-flush">
                        <p>Your Bookings:</p>
                        <table id="tabla_bookings" class="table-responsive-sm table-responsive-lg mx-auto pt-2 events">

                            <thead>

                                <tr>
                                    <th scope="col">Date</th>
                                    <th scope="col">Hour</th>
                                    <th scope="col">Phone</th>
                                    <th></th>
                                </tr>
                            </thead>
                            {{#each bookings}}
                            <tr>
                                <li>
                                    <td>{{bk_date}}</td>
                                    <td>{{bk_time}}</td>
                                    <td>{{phone}}</td>
                                    <td>
                                        <a class="btn btn-danger" data-toggle="modal" data-target="#Modal1">
                                            <i class="fas fa-trash-alt button-profile"></i>
                                        </a>
                                        <!-- Modal for delete bookings -->
                                        <div class="modal fade" id="Modal1" tabindex="-1" role="dialog"
                                            aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLongTitle">
                                                            You are sure you want to cancel the booking for the day
                                                            {{bk_date}} at {{bk_time}}
                                                        </h5>
                                                        <button type="button" class="close" data-dismiss="modal"
                                                            aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        Your booking will be canceled and the date free, in case you
                                                        want to recover it you will have to request it again.
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary"
                                                            data-dismiss="modal">Close</button>
                                                        <a type="button" href="/booking_delete/{{id}}"
                                                            class="btn btn-danger">Delete</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </td>
                                </li>
                            </tr>
                            {{else}}
                            <p>There are no bookings yet.</p>
                            <a href="/booking">Reserve one now!</a>
                            {{/each}}
                        </table>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>